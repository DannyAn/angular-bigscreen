{
  "name": "angular-bigscreen",
  "version": "0.1.0",
  "description": "An Angular service to quickly use the HTML5 fullscreen API",
  "main": "index.bundle.js",
  "module": "index.js",
  "jsnext:main": "index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "scripts": {
	"clean": "rimraf dist",
	"lint": "tslint -c tslint.json src/**/*.ts",
	"build": "npm run clean && tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/index.js > dist/index.bundle.js && ngc -p tsconfig-esm.json && cp package.json dist && cp README.md dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@angular/core": "^4.0.2",
	"rxjs": "^5.0.1",
	"zone.js": "^0.8.4"
  },
  "devDependencies": {
	"@angular/compiler": "^4.0.2",
    "@angular/compiler-cli": "^4.0.2",
	"codelyzer": "~2.0.1",
	"rimraf": "^2.6.1",
	"tslint": "^4.4.2",
	"typescript": "~2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alxhotel/angular-bigscreen.git"
  },
  "keywords": [
    "fullscreen",
    "angular",
    "api"
  ],
